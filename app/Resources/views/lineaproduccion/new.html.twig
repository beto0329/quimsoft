{% extends 'base.html.twig' %}

{% block body %}
    <h1><span class="glyphicon glyphicon-sort" aria-hidden="true"></span>Crear Línea de Producción</h1>

    {{ form_start(form) }}
    <div class="form-group col-md-6">
        <div class="form-group col-md-12">
            {{ form_label(form.lineaProduccion) }}
            {{ form_widget(form.lineaProduccion) }}
            {{ form_errors(form.lineaProduccion) }}
        </div>
        <hr>
        <div class="form-group col-md-6">
            {{ form_label(form.save) }}
            {{ form_end(form) }}
        </div>  
        <div class="form-group col-md-6">
            <a href="{{ path('guiaestabilidad_index') }}" class="btn btn-danger col-md-11">Cancelar</a>
        </div>  
    </div>        
{% endblock %}
