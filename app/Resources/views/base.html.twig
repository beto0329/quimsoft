<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}QuimSoft{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets 'bundles/app/css/*' filter='cssrewrite' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <style>
            .fixed-bottom {
                position: fixed;
                left: 0;
                bottom: 0;
                width: 100%;
                text-align: center;
                z-index: 999999;
            }
            
        </style>
    </head>
    <body>
        <div id="wrapper">
            <nav class="navbar navbar-inverse navbar-fixed-top "> 
                <div class="container-fluid"> 
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">
                             {% image '@AppBundle/Resources/public/css/images/logo.svg' %}
                                <img src="{{ asset_url }}" alt="logo" width="30" />
                            {% endimage %} 
                        </a>
                    </div>
                    <a href="#" class="pull-left navbar-brand" >QUIMSOFT</a>
                    <div class="collapse navbar-collapse navbar-ex1-collapse" id="bs-example-navbar-collapse-9">
                        <ul class="nav navbar-nav side-nav">                            
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Maestros <span class="caret"></span></a>
                                <ul class="dropdown-menu">                     
                                    <li><a href="{{ path('laboratorio_index') }}">Maestro Laboratorios</a></li>
                                    <li><a href="{{ path('guiaestabilidad_index') }}">Maestro Guía Estabilidad</a></li> 
                                    <li><a href="{{ path('medicamento_index') }}" class="bottom" >Maestro Medicamentos</a></li> 
                                    <li><a href="{{ path('insumo_index') }}" class="bottom" >Maestro Insumos</a></li> 
                                    <li><a href="{{ path('vehiculo_index') }}" class="bottom" >Maestro Vehículos</a></li> 
                                </ul> 
                            </li> 
                        </ul> 
                    </div>
                        
                </div>
            </nav> 
            <div id="page-wrapper">
                <div class="container-fluid">

                        {% block body %}{% endblock %}        

                </div>
                <!-- /.container-fluid -->
            </div>                 
        </div>
        <div class="fixed-bottom">
            <a href="#" class="pull-left" >
                 {% image '@AppBundle/Resources/public/css/images/logo.svg' %}
                    <img src="{{ asset_url }}" alt="logo" width="50" />
                {% endimage %} <span style="color: #fff;">Powered By QuimSoft</span>
            </a>
            
        </div>
        {% block javascripts %}
            {% javascripts 
                '@AppBundle/Resources/public/js/jquery.js'
                '@AppBundle/Resources/public/js/jquery.ui.js'
                '@AppBundle/Resources/public/js/jquery-1.12.4.js'
                '@AppBundle/Resources/public/js/jquery.dataTables.min.js'
                '@AppBundle/Resources/public/js/dataTables.buttons.min.js'
                '@AppBundle/Resources/public/js/bootstrap.min.js'
                '@AppBundle/Resources/public/js/bootstrap-select.js'
                '@AppBundle/Resources/public/js/bootstrap-datepicker.js'
                '@AppBundle/Resources/public/js/bootstrap-datepicker.min.js'
                '@AppBundle/Resources/public/js/bootstrap-datepicker.es.min.js'%}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
            <script>
                $('.datepicker').datepicker({
                        language: 'es',
                        autoclose: true,
                        format: 'yyyy-mm-dd',
                    });
                    
                    $('.table').DataTable();
            </script>
        {% endblock %}
    </body>
</html>
