{% extends 'base.html.twig' %}

{% block body %}
    <h1><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Editar Medicamento</h1>

    {{ form_start(edit_form) }}
        <div class="form-group col-md-6">
            {{ form_label(edit_form.nombreMedicamento) }}
            {{ form_widget(edit_form.nombreMedicamento, { 'id': 'nomMed'}) }}
            {{ form_errors(edit_form.nombreMedicamento) }}
        </div>
        <div class="form-group col-md-6">
            <label for="idlaboratorio" >Laboratorio</label>
            {{ form_widget(edit_form.idlaboratorio, { 'id': 'nomLab'}) }}
            {{ form_errors(edit_form.idlaboratorio) }}
        </div>
        <div class="form-group col-md-6">
            {{ form_label(edit_form.medicamentoLaboratorio) }}
            {{ form_widget(edit_form.medicamentoLaboratorio, { 'id': 'medLab'}) }}
            {{ form_errors(edit_form.medicamentoLaboratorio) }}
        </div>  
        <div class="edit_form-group col-md-6">
            {{ form_label(edit_form.lote) }}
            {{ form_widget(edit_form.lote) }}
            {{ form_errors(edit_form.lote) }}
        </div>
        <div class="edit_form-group col-md-6">
            {{ form_label(edit_form.fechaVencimiento) }}
            {{ form_widget(edit_form.fechaVencimiento) }}
            {{ form_errors(edit_form.fechaVencimiento) }}
        </div>
        <div class="edit_form-group col-md-6">
            {{ form_label(edit_form.presentacionExistencia) }}
            {{ form_widget(edit_form.presentacionExistencia) }}
            {{ form_errors(edit_form.presentacionExistencia) }}
        </div>
        <div class="edit_form-group col-md-6">
            <label></label>
            {{ form_widget(edit_form.save) }}
            {{ form_end(edit_form) }}
        </div>
        <div class="edit_form-group col-md-6">
            <label></label>
            <a href="{{ path('medicamento_index') }}" class="btn btn-danger form-control">Cancelar</a>
        </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $('#nomLab').change(function(){
                var nomMed = $('#nomMed').val();
                var nomLab = $(this).find("option:selected").text();
                
                $('#medLab').val(nomMed+'( '+nomLab+' )');
            });
        });
    </script>    
{% endblock %}