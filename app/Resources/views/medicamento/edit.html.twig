{% extends 'base.html.twig' %}

{% block body %}
    <h1><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Editar Medicamento</h1>

    {{ form_start(edit_form) }}
    <div class="edit_form-group col-md-12">
        <div class="edit_form-group col-md-6">
            {{ form_label(edit_form.nombreMedicamento) }}
            {{ form_widget(edit_form.nombreMedicamento) }}
            {{ form_errors(edit_form.nombreMedicamento) }}
        </div>
        <div class="edit_form-group col-md-6">
            {{ form_label(edit_form.presentacionExistencia) }}
            {{ form_widget(edit_form.presentacionExistencia) }}
            {{ form_errors(edit_form.presentacionExistencia) }}
        </div>
    </div>  
    <div class="edit_form-group col-md-12">
        <div class="edit_form-group col-md-6">
            {{ form_label(edit_form.lote) }}
            {{ form_widget(edit_form.lote) }}
            {{ form_errors(edit_form.lote) }}
        </div>
        <div class="edit_form-group col-md-6">
            {{ form_label(edit_form.fechaVencimiento) }}
            {{ form_widget(edit_form.fechaVencimiento) }}
            {{ form_errors(edit_form.fechaVencimiento) }}
        </div>
    </div>
    <div class="edit_form-group col-md-12">
        <div class="edit_form-group col-md-6">
            <label for="idlaboratorio" >Laboratorio</label>
            {{ form_widget(edit_form.idlaboratorio) }}
            {{ form_errors(edit_form.idlaboratorio) }}
        </div>
    </div>
    <div class="edit_form-group col-md-6">
        {{ form_label(edit_form.save) }}
        {{ form_end(edit_form) }}
        <a href="{{ path('medicamento_index') }}" class="btn btn-danger col-md-5 pull-right">Cancelar</a>
    </div> 
{% endblock %}
