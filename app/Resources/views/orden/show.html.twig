{% extends 'base.html.twig' %}

{% block body %}
    <h1>Orden</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ orden.id }}</td>
            </tr>
            <tr>
                <th>Fechaproduccion</th>
                <td>{{ orden.fechaProduccion }}</td>
            </tr>
            <tr>
                <th>Horaproduccion</th>
                <td>{{ orden.horaProduccion }}</td>
            </tr>
            <tr>
                <th>Lineaproduccion</th>
                <td>{{ orden.lineaProduccion }}</td>
            </tr>
            <tr>
                <th>Current</th>
                <td>{% if orden.current %}{{ orden.current|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('orden_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('orden_edit', { 'id': orden.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
