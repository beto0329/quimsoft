{% extends 'base.html.twig' %}

{% block body %}
    <h1><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Editar Insumo</h1>

    {{ form_start(edit_form) }}
    <div class="edit_form-group col-md-12">
        {{ form_label(edit_form.nombreInsumo) }}
        {{ form_widget(edit_form.nombreInsumo) }}
        {{ form_errors(edit_form.nombreInsumo) }}
    </div>  
    <div class="edit_form-group col-md-6">
        {{ form_label(edit_form.lote) }}
        {{ form_widget(edit_form.lote) }}
        {{ form_errors(edit_form.lote) }}
    </div>
    <div class="edit_form-group col-md-6">
        {{ form_label(edit_form.fechaVencimiento) }}
        {{ form_widget(edit_form.fechaVencimiento) }}
        {{ form_errors(edit_form.fechaVencimiento) }}
    </div>
    <div class="edit_form-group col-md-6">
        {{ form_label(edit_form.save) }}
        {{ form_end(edit_form) }}
    </div> 
        
    <div class="edit_form-group col-md-6">
        <a href="{{ path('insumo_index') }}" class="btn btn-danger col-md-5">Cancelar</a>
    </div> 
{% endblock %}
