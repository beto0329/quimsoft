{% extends 'base.html.twig' %}

{% block body %}
    <h1><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Editar Laboratorio</h1>

    {{ form_start(edit_form) }}
        <div class="form-group col-md-12">
            {{ form_label(edit_form.nombre) }}
            {{ form_widget(edit_form.nombre) }}
            {{ form_errors(edit_form.nombre) }}
        </div>
        <div class="form-group col-md-6">
            {{ form_label(edit_form.contacto) }}
            {{ form_widget(edit_form.contacto) }}
            {{ form_errors(edit_form.contacto) }}
        </div>
        <div class="form-group col-md-6">
            {{ form_label(edit_form.telcontacto) }}
            {{ form_widget(edit_form.telcontacto) }}
            {{ form_errors(edit_form.telcontacto) }}
        </div>
        <div class="form-group col-md-6">
            {{ form_label(edit_form.save) }}
            {{ form_end(edit_form) }}
        </div>  
        <div class="form-group col-md-6">
            <a href="{{ path('laboratorio_index') }}" class="btn btn-danger col-md-5">Cancelar</a>
        </div>  
{% endblock %}
