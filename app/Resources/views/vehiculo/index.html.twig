{% extends 'base.html.twig' %}

{% block body %}
   <div class="panel panel-info">
            <div class="panel-heading"><h2><span class="glyphicon glyphicon-tint" aria-hidden="true"></span>Vehiculos <a href="{{ path('vehiculo_new') }}" class="btn btn-info pull-right" ><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Crear Vehiculo</a></h2></div>
            <div class="panel-body">
                <table id='medTable' class='table table-hover table-striped table-bordered dt-responsive' cellspacing='0' width='100%'>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombrevehiculo</th>
                            <th>Lote</th>
                            <th>Fechavencimiento</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for vehiculo in vehiculos %}
                        <tr>
                            <td><a href="{{ path('vehiculo_show', { 'id': vehiculo.id }) }}">{{ vehiculo.id }}</a></td>
                            <td>{{ vehiculo.nombreVehiculo }}</td>
                            <td>{{ vehiculo.lote }}</td>
                            <td>{% if vehiculo.fechaVencimiento %}{{ vehiculo.fechaVencimiento|date('Y-m-d') }}{% endif %}</td>
                            <td>
                                <a href="{{ path('vehiculo_edit', { 'id': vehiculo.id }) }}" class="btn btn-info" ><h4><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h4></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>  
{% endblock %}
