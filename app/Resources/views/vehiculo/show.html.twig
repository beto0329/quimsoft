{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vehiculo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehiculo.id }}</td>
            </tr>
            <tr>
                <th>Nombrevehiculo</th>
                <td>{{ vehiculo.nombreVehiculo }}</td>
            </tr>
            <tr>
                <th>Lote</th>
                <td>{{ vehiculo.lote }}</td>
            </tr>
            <tr>
                <th>Fechavencimiento</th>
                <td>{% if vehiculo.fechaVencimiento %}{{ vehiculo.fechaVencimiento|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Current</th>
                <td>{% if vehiculo.current %}{{ vehiculo.current|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vehiculo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('vehiculo_edit', { 'id': vehiculo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
